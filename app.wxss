/* 字体样式 */
.font-big {
  font-size: 55rpx;
}
.font-in {
  font-size: 28rpx;
}
.font-small {
  font-size: 24rpx;
}
.bgc {
  background-color: #F8F8F8;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 100rpx;
  background-color: #1aad19;
  border: 1rpx solid #d9d9d9;
  box-sizing: border-box;
  border-radius: 17rpx;
  font-size: 35rpx;
  font-weight: 700;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}