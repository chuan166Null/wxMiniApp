						<view class="card-acc">
							<view class="card-day font-big">9</view>
							<view class="datearea">
								<view class="datetxt font-small">天后出账</view>
								<view class="dateval font-small">
									1月1日
									<text style="color: #01b800">卡</text>
								</view>
							</view>
						</view>
						<view class="paymentinfo">
							<view class="card-day font-big">3</view>
							<view class="datearea">
								<view class="datetxt font-small">天后还款</view>
								<view class="dateval font-small">
									1月4日
									<text style="color: #01b800">+3</text>
								</view>
							</view>
						</view>
					</view>
					<navigator class="edit-card" bindtap="onclick" url="../add/add">编辑卡片</navigator>
				</view>
			</movable-view>
		</movable-area>
