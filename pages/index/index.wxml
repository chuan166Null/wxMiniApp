		<movable-area class="movable-card">
			<movable-view animation="{{animation}}" direction="horizontal" inertia="{{true}}" bindtouchstart="touchstart" bindtouchmove="touchmove" bindtouchend="touchend" style="transform: translateX({{slideX}});">
