.toast-box {
  width: 100%;
  height: 1200rpx;
  background-color: rgba(250, 250, 250, .8);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.box-in {
  width: 300rpx;
  height: 300rpx;
  border-radius: 30rpx;
  background-color: rgba(217, 217, 217, .9);
  position: fixed;
  top: 33%;
  left: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.box-in image {
  width: 45%;
  height: 45%;
}
.box-in text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  height: 30%;
  text-align: center;
  font-size: 14px;
  color: #333;
  margin-top: -5rpx;
}

.home-title {
  width: 100%;
  height: 200rpx;
  background-color: #4CA6ED;
  border-bottom: 2rpx solid #666;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.home-title .acc,
.home-title .quota {
  width: 265rpx;
  font-size: 17px;
  line-height: 55rpx;
  padding: 12rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 17rpx;
  color: #FFFAFB;
  background-color: rgba(80, 80, 80, 0.3);
}
.line {
  width: 100%;
  height: 14rpx;
  background-color: #ccc;
}
/* .scroll {
