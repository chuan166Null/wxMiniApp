.card {
  width: 750rpx;
  height: 170rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: white;
}
.movable-card {
  width: 750rpx;
  height: 170rpx;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
}
movable-view {
  width: 900rpx;
  height: 170rpx;
}
.movable-card .edit-card {
  width: 150rpx;
  height: 170rpx;
  font-size: 13px;
  display: inline-block;
  color: white;
  text-align: center;
  line-height: 170rpx;
  background-color: red;
  position: absolute;
  top: 0;
  right: -6rpx;
}
.card .card-title {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
}
.card-main {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.card-acc, .paymentinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  width: 35%;
}
.card-day {
  padding-right: 10rpx;
}
.datearea {
  width: 60%;
}
.dateval {
  color: #909090;
}
